{% style %}
  .customer-auth {
    --auth-accent: #b7dde0;
    --auth-accent-2: #dbeeed;
    --auth-ink: #14282a;
    --auth-line: rgba(20, 40, 42, 0.16);
    position: relative;
  }

  .customer-auth:before {
    background:
      radial-gradient(circle at 12% 16%, rgba(183, 221, 224, 0.7), transparent 45%),
      radial-gradient(circle at 88% 78%, rgba(183, 221, 224, 0.52), transparent 42%);
    content: '';
    inset: 18px 0 0;
    pointer-events: none;
    position: absolute;
    z-index: -1;
  }

  .customer-auth__shell {
    display: grid;
    gap: 20px;
  }

  .customer-auth__intro,
  .customer-auth__panel {
    border: 1px solid var(--auth-line);
    border-radius: 22px;
    overflow: hidden;
    position: relative;
  }

  .customer-auth__intro {
    background: linear-gradient(146deg, var(--auth-accent) 0%, var(--auth-accent-2) 100%);
    color: var(--auth-ink);
    padding: clamp(24px, 4vw, 40px);
  }

  .customer-auth__intro:before {
    background: rgba(255, 255, 255, 0.34);
    border-radius: 999px;
    content: '';
    height: 180px;
    position: absolute;
    right: -56px;
    top: -70px;
    transform: rotate(-12deg);
    width: 180px;
    z-index: -1;
  }

  .customer-auth__intro:after {
    background: repeating-linear-gradient(
      -32deg,
      rgba(20, 40, 42, 0.11),
      rgba(20, 40, 42, 0.11) 1px,
      transparent 1px,
      transparent 13px
    );
    content: '';
    inset: auto -38px -46px auto;
    opacity: 0.25;
    pointer-events: none;
    position: absolute;
    transform: rotate(-6deg);
    width: 72%;
    height: 52%;
  }

  .customer-auth__eyebrow {
    font-family: var(--typeAccentPrimary), var(--typeAccentFallback);
    font-size: max(calc(var(--typeBaseSize) - 5px), 11px);
    letter-spacing: 0.24em;
    margin: 0 0 14px;
    text-transform: uppercase;
  }

  .customer-auth__intro-title {
    font-size: clamp(30px, 4.4vw, 50px);
    line-height: 0.96;
    margin: 0 0 16px;
    max-width: 9ch;
    text-wrap: balance;
  }

  .customer-auth__intro-copy {
    font-size: max(calc(var(--typeBaseSize) - 1px), 15px);
    line-height: 1.45;
    margin: 0;
    max-width: 30ch;
  }

  .customer-auth__intro-list {
    display: grid;
    gap: 10px;
    list-style: none;
    margin: 24px 0 0;
    padding: 0;
  }

  .customer-auth__intro-list li {
    align-items: center;
    background: rgba(255, 255, 255, 0.42);
    border: 1px solid rgba(20, 40, 42, 0.1);
    border-radius: 999px;
    display: flex;
    font-family: var(--typeAccentPrimary), var(--typeAccentFallback);
    font-size: max(calc(var(--typeBaseSize) - 6px), 12px);
    gap: 8px;
    letter-spacing: 0.16em;
    padding: 8px 14px;
    text-transform: uppercase;
    width: fit-content;
  }

  .customer-auth__dot {
    background: currentColor;
    border-radius: 999px;
    flex: 0 0 5px;
    height: 5px;
  }

  .customer-auth__panel {
    background: var(--colorBody);
    background: color-mix(in srgb, var(--colorBody), #ffffff 28%);
    box-shadow:
      0 16px 42px rgba(0, 0, 0, 0.08),
      inset 0 0 0 1px rgba(255, 255, 255, 0.4);
    padding: clamp(22px, 4vw, 38px);
  }

  .customer-auth__panel-mark {
    background: linear-gradient(135deg, rgba(183, 221, 224, 0.6), rgba(255, 255, 255, 0.2));
    border-radius: 999px;
    border: 1px solid rgba(20, 40, 42, 0.12);
    height: 84px;
    pointer-events: none;
    position: absolute;
    right: -18px;
    top: -20px;
    width: 84px;
  }

  .customer-auth__status {
    border-radius: 12px;
    margin-bottom: 16px;
    padding: 12px 14px;
  }

  .customer-auth__header {
    margin-bottom: 18px;
  }

  .customer-auth__title {
    font-size: clamp(30px, 4vw, 46px);
    letter-spacing: -0.01em;
    line-height: 0.98;
    margin: 0;
    text-wrap: balance;
  }

  .customer-auth__subtitle {
    margin: 11px 0 0;
    max-width: 37ch;
  }

  .customer-auth__errors {
    margin-bottom: 16px;
  }

  .customer-auth__errors .errors {
    border: 1px solid var(--auth-line);
    border-radius: 12px;
    margin: 0;
    padding: 12px 16px;
  }

  .customer-auth__field {
    margin-bottom: 16px;
  }

  .customer-auth__field-label {
    display: block;
    font-family: var(--typeAccentPrimary), var(--typeAccentFallback);
    font-size: max(calc(var(--typeBaseSize) - 5px), 11px);
    letter-spacing: 0.16em;
    margin-bottom: 8px;
    text-transform: uppercase;
  }

  .customer-auth__field-row {
    align-items: end;
    display: flex;
    gap: 12px;
    justify-content: space-between;
  }

  .customer-auth__field-row .customer-auth__field-label {
    margin-bottom: 0;
  }

  .customer-auth__input {
    background: rgba(255, 255, 255, 0.82);
    border: 1px solid rgba(20, 40, 42, 0.2);
    border-radius: 14px;
    min-height: 50px;
    padding: 11px 15px;
    transition: box-shadow 180ms ease, border-color 180ms ease, background-color 180ms ease;
  }

  .customer-auth__input:hover {
    background: rgba(255, 255, 255, 0.95);
  }

  .customer-auth__input:focus {
    border-color: var(--colorTextBody);
    box-shadow: 0 0 0 2px rgba(20, 40, 42, 0.12);
    outline: none;
  }

  .customer-auth__link {
    font-family: var(--typeAccentPrimary), var(--typeAccentFallback);
    font-size: max(calc(var(--typeBaseSize) - 6px), 12px);
    letter-spacing: 0.16em;
    text-decoration: underline;
    text-decoration-thickness: 1px;
    text-transform: uppercase;
    text-underline-offset: 0.2em;
  }

  .customer-auth__link:hover {
    opacity: 0.76;
  }

  .customer-auth__actions {
    margin-top: 18px;
  }

  body:not([data-button_style='angled']) .customer-auth .btn {
    border-radius: 14px;
  }

  .customer-auth__register,
  .customer-auth__guest {
    border-top: 1px solid var(--auth-line);
    margin-top: 24px;
    padding-top: 20px;
  }

  .customer-auth__register-title,
  .customer-auth__guest-title {
    font-family: var(--typeAccentPrimary), var(--typeAccentFallback);
    font-size: max(calc(var(--typeBaseSize) - 5px), 12px);
    letter-spacing: 0.16em;
    margin: 0 0 12px;
    text-transform: uppercase;
  }

  .customer-auth__ghost-button {
    margin-top: 10px;
  }

  @media only screen and (min-width: 990px) {
    .customer-auth__shell {
      align-items: stretch;
      gap: 30px;
      grid-template-columns: minmax(0, 0.92fr) minmax(0, 1.08fr);
    }

    .customer-auth__intro {
      transform: translateY(16px);
    }
  }

  @media only screen and (max-width: 989px) {
    .customer-auth__intro-list li {
      width: 100%;
    }
  }

  @media (prefers-reduced-motion: no-preference) {
    .customer-auth__intro,
    .customer-auth__panel {
      animation: customer-auth-rise 520ms cubic-bezier(0.19, 1, 0.22, 1) both;
    }

    .customer-auth__panel {
      animation-delay: 80ms;
    }
  }

  @keyframes customer-auth-rise {
    from {
      opacity: 0;
      transform: translate3d(0, 18px, 0);
    }

    to {
      opacity: 1;
      transform: translate3d(0, 0, 0);
    }
  }
{% endstyle %}

<div class="customer-auth page-width page-width--narrow page-content">
  <div class="customer-auth__shell">
    <aside class="customer-auth__intro">
      <p class="customer-auth__eyebrow">{{ shop.name }}</p>
      <h2 class="customer-auth__intro-title">{{ 'customer.login.title' | t }}</h2>
      <p class="customer-auth__intro-copy">
        Sign in to view your orders, manage addresses, and check out faster.
      </p>
      <ul class="customer-auth__intro-list">
        <li><span class="customer-auth__dot"></span> Order history</li>
        <li><span class="customer-auth__dot"></span> Saved addresses</li>
        <li><span class="customer-auth__dot"></span> Faster checkout</li>
      </ul>
    </aside>

    <div class="customer-auth__panel">
      <span class="customer-auth__panel-mark" aria-hidden="true"></span>

      <div class="note note--success hide customer-auth__status" id="ResetSuccess">
        {{ 'customer.recover_password.success' | t }}
      </div>

      <div id="CustomerLoginForm" class="form-vertical">
        <header class="customer-auth__header">
          <h1 class="customer-auth__title">{{ 'customer.login.title' | t }}</h1>
        </header>

        {%- form 'customer_login' -%}
          {%- if form.errors -%}
            <div class="customer-auth__errors">
              {{ form.errors | default_errors }}
            </div>
          {%- endif -%}

          <div class="customer-auth__field">
            <label for="CustomerEmail" class="customer-auth__field-label">{{ 'customer.login.email' | t }}</label>
            <input
              type="email"
              name="customer[email]"
              id="CustomerEmail"
              class="input-full customer-auth__input{% if form.errors contains 'email' %} error{% endif %}"
              autocorrect="off"
              autocapitalize="off"
              autofocus
            >
          </div>

          {%- if form.password_needed -%}
            <div class="customer-auth__field">
              <div class="customer-auth__field-row">
                <label for="CustomerPassword" class="customer-auth__field-label">{{ 'customer.login.password' | t }}</label>
                <a href="#recover" id="RecoverPassword" class="customer-auth__link">
                  {{ 'customer.login.forgot_password' | t }}
                </a>
              </div>
              <input
                type="password"
                value=""
                name="customer[password]"
                id="CustomerPassword"
                class="input-full customer-auth__input{% if form.errors contains 'password' %} error{% endif %}"
              >
            </div>
          {%- endif -%}

          <div class="customer-auth__actions">
            <button type="submit" class="btn btn--full">
              {{ 'customer.login.sign_in' | t }}
            </button>
          </div>

          <div class="customer-auth__register">
            <p class="customer-auth__register-title">{{ 'layout.customer.create_account' | t }}</p>
            <a href="{{ routes.account_register_url }}" class="btn btn--secondary btn--full customer-auth__ghost-button">
              {{ 'layout.customer.create_account' | t }}
            </a>
          </div>
        {%- endform -%}
      </div>

      <div id="RecoverPasswordForm" class="hide">
        <div class="form-vertical">
          <header class="customer-auth__header">
            <h2 class="customer-auth__title">{{ 'customer.recover_password.title' | t }}</h2>
            <p class="customer-auth__subtitle">{{ 'customer.recover_password.subtext' | t }}</p>
          </header>

          {%- form 'recover_customer_password' -%}
            {%- if form.errors -%}
              <div class="customer-auth__errors">
                {{ form.errors | default_errors }}
              </div>
            {%- endif -%}

            {%- if form.posted_successfully? -%}
              <span class="hide reset-password-success"></span>
            {%- endif -%}

            <div class="customer-auth__field">
              <label for="RecoverEmail" class="customer-auth__field-label">{{ 'customer.recover_password.email' | t }}</label>
              <input
                type="email"
                value=""
                name="email"
                id="RecoverEmail"
                class="input-full customer-auth__input"
                autocorrect="off"
                autocapitalize="off"
              >
            </div>

            <div class="customer-auth__actions">
              <button type="submit" class="btn btn--full">
                {{ 'customer.recover_password.submit' | t }}
              </button>
            </div>

            <div class="customer-auth__actions">
              <button type="button" id="HideRecoverPasswordLink" class="customer-auth__link">
                {{ 'customer.recover_password.cancel' | t }}
              </button>
            </div>
          {%- endform -%}
        </div>
      </div>

      {%- if shop.checkout.guest_login -%}
        <div class="customer-auth__guest">
          <h3 class="customer-auth__guest-title">{{ 'customer.login.guest_title' | t }}</h3>
          {%- form 'guest_login' -%}
            <button type="submit" class="btn btn--secondary btn--full">
              {{ 'customer.login.guest_continue' | t }}
            </button>
          {%- endform -%}
        </div>
      {%- endif -%}
    </div>
  </div>
</div>
