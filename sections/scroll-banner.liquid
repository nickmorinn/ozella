      scrollShifts.forEach(shift => {
        shift.style.willChange = 'transform';
      });

      // Throttle the scroll event to improve performance on mobile
      function throttle(func, limit) {
        let lastFunc;
        let lastRan;
        return function() {
          const context = this;
          const args = arguments;
          if (!lastRan) {
            func.apply(context, args);
            lastRan = Date.now();
          } else {
            clearTimeout(lastFunc);
            lastFunc = setTimeout(function() {
              if ((Date.now() - lastRan) >= limit) {
                func.apply(context, args);
                lastRan = Date.now();
              }
            }, limit);
          }
        };
      }

      // Function to handle scroll-based animations
      const handleScroll = throttle(function() {
        scrollShifts.forEach(shift => {
          // Only animate elements within the viewport
          const rect = shift.getBoundingClientRect();
          if (rect.top < window.innerHeight && rect.bottom > 0) {
            const def = shift.classList.contains('scroll-reverse_direction') ? -0.1 : 0.1;
            
            // Apply smooth translateX transformation
            shift.style.transform = `translateX(${window.scrollY * def}px)`;

            // Apply rotation for svgPaths if data-rotate is set to true
            shift.querySelectorAll('.svgPath').forEach(path => {
              if (path.dataset.rotate === "true") {
                path.style.transform = `rotate(${window.scrollY * 0.1}deg)`;
              }
            });

            // Apply rotation for shapeText if data-rotate is set to true
            shift.querySelectorAll('.shapeText').forEach(text => {
              if (text.dataset.rotate === "true") {
                text.style.transform = `rotate(${window.scrollY * 0.1}deg)`;
              }
            });
          }
        });
      }, 100); // Throttled to fire every 100ms

      // Use IntersectionObserver to observe elements entering the viewport
      const observer = new IntersectionObserver(entries => {
        entries.forEach(entry => {
          if (entry.isIntersecting) {
            window.addEventListener('scroll', handleScroll);
          } else {
            window.removeEventListener('scroll', handleScroll);
          }
        });
      }, { threshold: 0.1 });

      scrollShifts.forEach(shift => observer.observe(shift));
    };

    // Initialize the observer function once the document is fully loaded
    document.addEventListener('readystatechange', function() {
      if (document.readyState === "complete") {
        observerFun();
      }
    });

    // Reinitialize the observer when a new section is loaded in Shopify
    document.addEventListener('shopify:section:load', function(event) {
      observerFun();
    });
  })();
