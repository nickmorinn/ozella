{%- style -%}
  .hero--{{ section.id }} .hero__title {
    font-size: {{ section.settings.title_size | times: 0.5 }}px;
  }
  @media only screen and (min-width: 769px) {
    .hero--{{ section.id }} .hero__title {
      font-size: {{ section.settings.title_size }}px;
    }
  }

  .hero--{{ section.id }} .hero__subtitle {
    font-family: var(--typeAccentPrimary), var(--typeAccentFallback);
    font-size: 0.875em;
    letter-spacing: 0;
    line-height: 1.2;
    text-transform: uppercase;
    word-spacing: -0.08em;
  }

  .hero--{{ section.id }} .hero__text-content.horizontal-left .hero__subtitle {
    margin-right: auto;
    max-width: 23ch;
    text-align: left;
  }

  .hero--{{ section.id }} .hero__subtitle .animation-contents {
    display: block;
    text-wrap: pretty;
  }

  .hero--{{ section.id }} .hero__link .btn {
    font-size: max(calc(var(--typeBaseSize) + 2px), 16px);
    min-width: 190px;
    padding: 18px 30px;
  }

  @media only screen and (max-width: 768px) {
    .hero--{{ section.id }} .hero__link .btn {
      font-size: max(calc(var(--typeBaseSize) - 1px), 14px);
      min-width: 170px;
      padding: 15px 24px;
    }
  }

  {%- assign button_alpha = section.settings.color_accent | color_extract: 'alpha' -%}
  {% unless button_alpha == 0.0 %}
    .hero--{{ section.id }} .btn {
      background: {{ section.settings.color_accent }} !important;
      border-color: {{ section.settings.color_accent }} !important;

      {%- assign accent_brightness = section.settings.color_accent | color_extract: 'lightness' -%}

      {% if accent_brightness > 40 %}
        color: {{ settings.color_body_text }} !important;
      {% endif %}
    }

    {% if settings.button_style == 'angled' %}
      .hero--{{ section.id }} .btn:before,
      .hero--{{ section.id }} .btn:after {
        background: {{ section.settings.color_accent }} !important;
        border-color: {{ section.settings.color_accent }} !important;
      }
    {% endif %}
  {% endunless %}

  {% if section.settings.overlay_opacity > 0 %}
    .hero--{{ section.id }} .hero__text-wrap:after {
      content: '';
      position: absolute;
      left: 0;
      right: 0;
      top: 0;
      bottom: 0;
      z-index: 3;
      background-color: #000;
      opacity: {{ section.settings.overlay_opacity | divided_by: 100.0 }};
    }
  {% endif %}

  @keyframes hero-title-reveal-{{ section.id }} {
    0% {
      opacity: 0;
      transform: translate3d(0, 30px, 0) scale(0.985);
      filter: blur(8px);
      letter-spacing: 0.018em;
    }
    70% {
      opacity: 1;
      transform: translate3d(0, 0, 0) scale(1);
      filter: blur(0);
      letter-spacing: 0;
    }
    100% {
      opacity: 1;
      transform: translate3d(0, 0, 0) scale(1);
      filter: blur(0);
      letter-spacing: 0;
    }
  }

  @keyframes hero-copy-reveal-{{ section.id }} {
    0% {
      opacity: 0;
      transform: translate3d(0, 24px, 0);
      filter: blur(6px);
    }
    80% {
      opacity: 1;
      transform: translate3d(0, 0, 0);
      filter: blur(0);
    }
    100% {
      opacity: 1;
      transform: translate3d(0, 0, 0);
      filter: blur(0);
    }
  }

  @keyframes hero-button-reveal-{{ section.id }} {
    0% {
      opacity: 0;
      transform: translate3d(0, 16px, 0) scale(0.98);
    }
    100% {
      opacity: 1;
      transform: translate3d(0, 0, 0) scale(1);
    }
  }

  /* Fallback override in case a stale global selector still uses rise-up */
  @keyframes rise-up {
    0% {
      opacity: 0;
      transform: translate3d(0, 30px, 0);
      filter: blur(6px);
    }
    100% {
      opacity: 1;
      transform: translate3d(0, 0, 0);
      filter: blur(0);
    }
  }

  .video-parent-section.hero--{{ section.id }} .hero__title .animation-contents,
  .video-parent-section.hero--{{ section.id }} .hero__subtitle .animation-contents,
  .video-parent-section.hero--{{ section.id }} .hero__top-subtitle .animation-contents {
    will-change: transform, opacity, filter;
  }

  .video-parent-section.hero--{{ section.id }}.loaded .hero__title .animation-contents,
  .loaded .video-parent-section.hero--{{ section.id }} .hero__title .animation-contents {
    animation-name: hero-title-reveal-{{ section.id }} !important;
    animation-duration: 1.3s !important;
    animation-timing-function: cubic-bezier(0.16, 1, 0.3, 1) !important;
    animation-delay: 0.25s !important;
    animation-fill-mode: both !important;
  }

  .video-parent-section.hero--{{ section.id }}.loaded .hero__subtitle .animation-contents,
  .video-parent-section.hero--{{ section.id }}.loaded .hero__top-subtitle .animation-contents,
  .loaded .video-parent-section.hero--{{ section.id }} .hero__subtitle .animation-contents,
  .loaded .video-parent-section.hero--{{ section.id }} .hero__top-subtitle .animation-contents {
    animation-name: hero-copy-reveal-{{ section.id }} !important;
    animation-duration: 1.1s !important;
    animation-timing-function: cubic-bezier(0.22, 1, 0.36, 1) !important;
    animation-delay: 0.75s !important;
    animation-fill-mode: both !important;
  }

  .video-parent-section.hero--{{ section.id }}.loaded .hero__link .btn,
  .loaded .video-parent-section.hero--{{ section.id }} .hero__link .btn {
    animation-name: hero-button-reveal-{{ section.id }} !important;
    animation-duration: 0.95s !important;
    animation-timing-function: cubic-bezier(0.22, 1, 0.36, 1) !important;
    animation-delay: 1.15s !important;
    animation-fill-mode: both !important;
  }

  .video-parent-section.hero--{{ section.id }}.loaded .hero__link .btn:nth-child(2),
  .loaded .video-parent-section.hero--{{ section.id }} .hero__link .btn:nth-child(2) {
    animation-delay: 1.32s !important;
  }

  .video-parent-section.hero--{{ section.id }} .hero__link .btn {
    backface-visibility: hidden;
    transform: translate3d(0, 0, 0);
    transition: transform 0.4s cubic-bezier(0.22, 1, 0.36, 1), box-shadow 0.4s cubic-bezier(0.22, 1, 0.36, 1), filter 0.35s ease;
    will-change: transform, box-shadow, filter;
  }

  .video-parent-section.hero--{{ section.id }} .hero__link .btn .icon-play {
    transition: transform 0.4s cubic-bezier(0.22, 1, 0.36, 1), opacity 0.3s ease;
    will-change: transform;
  }

  .video-parent-section.hero--{{ section.id }} .hero__link .btn:hover,
  .video-parent-section.hero--{{ section.id }} .hero__link .btn:focus-visible {
    box-shadow: 0 14px 30px rgba(0, 0, 0, 0.22), 0 4px 10px rgba(0, 0, 0, 0.14);
    filter: saturate(1.06) brightness(1.02);
    transform: translate3d(0, -2px, 0) scale(1.015);
  }

  .video-parent-section.hero--{{ section.id }} .hero__link .btn:hover .icon-play,
  .video-parent-section.hero--{{ section.id }} .hero__link .btn:focus-visible .icon-play {
    transform: translate3d(2px, 0, 0);
  }

  .video-parent-section.hero--{{ section.id }} .hero__link .btn:active {
    box-shadow: 0 8px 16px rgba(0, 0, 0, 0.18), 0 2px 5px rgba(0, 0, 0, 0.12);
    filter: saturate(1.03);
    transform: translate3d(0, 0, 0) scale(0.995);
  }

  .video-parent-section.hero--{{ section.id }} .hero__link .btn:focus-visible {
    outline-offset: 2px;
  }

  [data-disable-animations=true] .video-parent-section.hero--{{ section.id }} .hero__title .animation-contents,
  [data-disable-animations=true] .video-parent-section.hero--{{ section.id }} .hero__subtitle .animation-contents,
  [data-disable-animations=true] .video-parent-section.hero--{{ section.id }} .hero__top-subtitle .animation-contents,
  [data-disable-animations=true] .video-parent-section.hero--{{ section.id }} .hero__link .btn {
    animation: none !important;
    filter: none !important;
    opacity: 1 !important;
    transform: none !important;
  }

  [data-disable-animations=true] .video-parent-section.hero--{{ section.id }} .hero__link .btn,
  [data-disable-animations=true] .video-parent-section.hero--{{ section.id }} .hero__link .btn .icon-play {
    transition: none !important;
  }
{%- endstyle -%}

<div
  data-section-id="{{ section.id }}"
  data-section-type="video-section"
  class="video-parent-section hero hero--{{ section.id }} hero--{{ section.settings.section_height }} hero--mobile--{{ section.settings.mobile_height }}"
  data-mobile-natural="false"
  data-aos="hero__animation">

  <div class="hero__media hero__media--{{ section.id }}">
    <div class="hero__media-container">

      {%- if section.settings.video_url contains 'youtube.com/watch' -%}
        {%- assign video_id = section.settings.video_url | split: 'v=' -%}
        {%- assign video_id = video_id[1] | split: '&' | first -%}
        <div
          id="YouTubeVideo-{{ section.id }}"
          class="video-div"
          data-type="youtube"
          data-video-id="{{ video_id }}"></div>
      {%- endif -%}

      {%- if section.settings.video_url contains 'youtu.be/' -%}
        {%- assign video_id = section.settings.video_url | split: '.be/' -%}
        {%- assign video_id = video_id[1] | split: '&' | first -%}
        <div
          id="YouTubeVideo-{{ section.id }}"
          class="video-div"
          data-type="youtube"
          data-video-id="{{ video_id }}"></div>
      {%- endif -%}

      {%- if section.settings.video_url contains 'vimeo.com' -%}
        {%- assign video_id = section.settings.video_url | split: '.com/' -%}
        {%- assign video_id = video_id[1] | split: '/' | first -%}
        <div
          id="Vimeo-{{ section.id }}"
          class="video-div"
          data-type="vimeo"
          data-video-id="{{ video_id }}"></div>
      {%- endif -%}

      {%- if section.settings.video_url contains '.mp4' or section.settings.video_url contains '.MP4' -%}
        <video
          id="Mp4Video-{{ section.id }}"
          class="video-div"
          data-type="mp4"
          src="{{ section.settings.video_url }}"
          loop muted playsinline autoplay></video>
      {%- endif -%}

    </div>
  </div>

  <div class="hero__text-wrap">
    <div class="page-width">
      <div class="hero__text-content {{ section.settings.text_align }}">
        {% unless section.settings.title == blank and section.settings.subheading == blank and section.settings.link_text == blank %}
        <div class="hero__text-shadow">
          {%- if section.settings.video_url contains 'vimeo.com' -%}
            <button type="button" id="VimeoTrigger-{{ section.id }}" class="vimeo-mobile-trigger medium-up--hide">
              <svg aria-hidden="true" focusable="false" role="presentation" class="icon icon-play" viewBox="18.24 17.35 24.52 28.3"><path fill="#323232" d="M22.1 19.151v25.5l20.4-13.489-20.4-12.011z"/></svg>
            </button>
          {%- endif -%}

          {%- unless section.settings.title == blank -%}
            <h2 class="h1 hero__title">
              <div class="animation-cropper"><div class="animation-contents">
              {{ section.settings.title | newline_to_br }}
              </div></div>
            </h2>
          {%- endunless -%}
          {%- if section.settings.subheading or section.settings.link -%}
            {%- unless section.settings.subheading == blank -%}
              <div class="hero__subtitle">
                <div class="animation-cropper"><div class="animation-contents">
                  {{ section.settings.subheading | escape }}
                </div></div>
              </div>
            {%- endunless -%}
            {%- if section.settings.link_text != blank -%}
              {%- assign link_href = section.settings.link -%}
              {%- if section.settings.link == blank -%}
                {%- assign link_href = section.settings.video_url -%}
              {%- endif -%}
              <div class="hero__link">
                <div class="animation-cropper">
                  <div class="animation-contents">
                    <a href="{{ link_href }}" class="btn btn--large{% if section.settings.color_accent and section.settings.color_accent == 'rgba(0,0,0,0)' %} btn--inverse{% endif %}"
                      {%- if section.settings.video_url contains 'vimeo.com' -%}
                        data-video-id="{{ video_id }}"
                      {%- endif -%}
                    >
                      {%- if link_href contains 'youtube.com/watch' or link_href contains 'youtu.be/' -%}
                        <svg aria-hidden="true" focusable="false" role="presentation" class="icon icon-play" viewBox="18.24 17.35 24.52 28.3"><path fill="#323232" d="M22.1 19.151v25.5l20.4-13.489-20.4-12.011z"/></svg>
                      {%- endif -%}
                      {{ section.settings.link_text }}
                    </a>
                  </div>
                </div>
              </div>
            {%- endif -%}
          {%- endif -%}
        </div>
        {% endunless %}
      </div>
    </div>
  </div>

</div>

