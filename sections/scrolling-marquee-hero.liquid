{%- style -%}

    #LT--{{ section.id }} {
    position: relative;
    overflow: hidden;
  }

  #LT--{{ section.id }} .video-background,
  #LT--{{ section.id }} .image-background {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
  }

  #LT--{{ section.id }} .video-background video {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  #LT--{{ section.id }} .image-background {
    background-size: cover;
    background-position: center;
  }

  #LT--{{ section.id }} .luna-templates__hero-marquee-content {
    position: relative;
    z-index: 2;
  }

  @media (max-width: 749px) {
    #LT--{{ section.id }} {
      min-height: {{ section.settings.mobile_height }}px;
    }
  }
  
  
  #LT--{{ section.id }} {
    background-image: url('{{ section.settings.image_bg | image_url: width: 2500 }}');
    background-size: cover;
    background-position: {{ section.settings.image_bg.presentation.focal_point }};
    min-height: 700px;
    position: relative;
    overflow-x: hidden;
  }

  #LT--{{ section.id }} .luna-templates__hero-marquee-content {
    align-items: center;
    display: grid;
    grid-template-areas: "." "marquee-bar" "marquee-text";
    grid-template-rows: 1fr .5fr 1fr;
    height: 100%;
    padding: 50px 0;
    position: absolute;
    width: 100vw;
  }

  #LT--{{ section.id }}.luna-templates__hero-marquee-layout-2 .luna-templates__hero-marquee-content {
    align-items: start;
    grid-template-areas: "." "marquee-text" "marquee-bar";
    grid-template-rows: 40% auto auto;
  }

  #LT--{{ section.id }} .luna-templates__hero-marquee-text-container {
    grid-area: marquee-text;
    max-width: 600px;
    padding: 20px 50px;
    {% if section.settings.layout == '2' %}
      padding-bottom: 0; 
      padding-top: 0; 
    {% endif %}
    {% if section.settings.text-align == 'center' %}
      margin: 0 auto;
      text-align: center;
    {% elsif section.settings.text-align == 'right' %}
      margin-left: auto;
      text-align: right;
    {% endif %}
  }

  #LT--{{ section.id }}.luna-templates__hero-marquee-layout-1 .luna-templates__hero-marquee-text-container {
    margin-top: auto;
  }

  #LT--{{ section.id }}.luna-templates__hero-marquee-layout-2 .luna-templates__hero-marquee-text-container {
    margin-bottom: auto;
  }

  #LT--{{ section.id }} .luna-templates__marquee-bar {
    grid-area: marquee-bar;
  }

  #LT--{{ section.id }}.luna-templates__hero-marquee-layout-2 .luna-templates__marquee-bar {
    margin-top: auto;
  }

  #LT--{{ section.id }} .luna-templates__marquee-bar .luna-templates__marquee-item * {
    color: {{ section.settings.color_marquee }};
  }

  {% if section.settings.blend-mode == 'gradient' %}
    #LT--{{ section.id }} .luna-templates__marquee-bar .luna-templates__marquee-item * {
      --color-marquee-rgb: {{ section.settings.color_marquee | color_to_rgb }};
      background-image: linear-gradient(180deg, var(--color-marquee-rgb), rgba(224, 224, 224, 0) 100%);
      color: #0000;
      -webkit-box-decoration-break: clone;
      box-decoration-break: clone;
      -webkit-background-clip: text;
      background-clip: text
    }
  {% else %}
    #LT--{{ section.id }} .luna-templates__marquee-bar * {
        transition: color 0.3s;
        cursor: default;
        mix-blend-mode: {{ section.settings.blend-mode }};
    }
  {% endif %}
  
  #LT--{{ section.id }} .luna-templates__marquee-bar .luna-templates__marquee-item:hover a * {
    color: {{ section.settings.color_marquee_hover }};
    transition: color 0.3s;
    cursor: pointer;
  }

  {% if section.settings.blend-mode == 'gradient' %}
    #LT--{{ section.id }} .luna-templates__marquee-bar .luna-templates__marquee-item:hover a * {
      --color-marquee-hover-rgb: {{ section.settings.color_marquee_hover | color_to_rgb }};
      background-image: linear-gradient(180deg, var(--color-marquee-hover-rgb), rgba(224, 224, 224, 0) 100%);
      color: #0000;
      -webkit-box-decoration-break: clone;
      box-decoration-break: clone;
      -webkit-background-clip: text;
      background-clip: text
    }
  {% endif %}

  #LT--{{ section.id }} .luna-templates__marquee-item {
    align-items: center;
    display: grid;
  }

  #LT--{{ section.id }} .luna-templates__marquee-bar-content {
    animation: lt-marquee-hero 120s linear infinite;
    display: flex;
  }

  #LT--{{ section.id }} .luna-templates__hero-marquee-text-container * {
    margin: 0;
    color: {{ section.settings.color_text }};
    line-height: 1.1;
  }

  #LT--{{ section.id }} .luna-templates__marquee-item * {
    font-size: {{ section.settings.font_size_desktop }}px;
    padding-right: 30px;
    margin: 0;
  }

  #LT--{{ section.id }} a {
    text-decoration: none;
  }

  #LT--{{ section.id }} .luna-templates__marquee-bar {
    display: flex;
    flex-wrap: nowrap;
    white-space: nowrap;
    min-width: 100%;
  }

  /* Text Block Style */
  #LT--{{ section.id }} .luna-templates__text * {
    margin: 0 0 0px 0;
    font-size: var(--font-size);
    line-height: 1.2;
  }

  /* Button Block Style */
  #LT--{{ section.id }} .luna-templates__block--button {
    display: inline-block;
    {% if section.settings.text-align == 'left' %}
      margin-right: 20px;
    {% elsif section.settings.text-align == 'center' %}
      margin: 0 10px;
    {% elsif section.settings.text-align == 'right' %}
      margin-left: 20px;
    {% endif %}
  }
  
  #LT--{{ section.id }} .luna-templates__block .luna-templates__button-container {
    margin: var(--button-margin, 20px 0);
  }
  
  #LT--{{ section.id }} .luna-templates__block .luna-templates__button {
    padding: 0.5rem 2rem;
    margin: 20px 0;
    background-color: var(--bg-color);
    border: 1px solid var(--border-color);
    color: var(--text-color) !important;
    font-size: var(--font-size);
    transition: background-color 0.3s, border-color 0.3s, color 0.3s;
    text-decoration: none;
  }
  
  #LT--{{ section.id }} .luna-templates__block .luna-templates__button:hover {
    background-color: var(--bg-hover);
    border: 1px solid var(--border-hover);
    color: var(--text-hover) !important;
    transition: background-color 0.3s, border-color 0.3s, color 0.3s;
  }
  
  #LT--{{ section.id }} .luna-templates__block .LT__btn-rounded {
    border-radius: 5px;
  }
  
  #LT--{{ section.id }} .luna-templates__block .LT__btn-pill {
    border-radius: 50px;
  }
  
  #LT--{{ section.id }} .luna-templates__block .LT__btn-oval {
    padding: 0.75em 1.5em;
    border-radius: 50%;
  }

  @keyframes lt-marquee-hero {
    0% {
      -webkit-transform: translateX(0);
      -moz-transform: translateX(0);
      transform: translateX(0);
    }
    100% {
      -webkit-transform: translateX(-100%);
      -moz-transform: translateX(-100%);
      transform: translateX(-100%);
    }
  }

  @media (prefers-reduced-motion: reduce) {
    .luna-templates__marquee-text-banner span {
      animation: none;
      width: auto;
      display: block;
      text-align: center;
      white-space: normal;
    }
  }
  
  @media (min-width: 750px) {
    #LT--{{ section.id }} .luna-templates__text * {
      font-size: var(--font-size-750);
    }
  }

  @media (min-width: 1200px) {
    #LT--{{ section.id }} .luna-templates__text * {
      font-size: var(--font-size-1200);
    }
  }

  @media (max-width: 749px) {
    #LT--{{ section.id }} {
      min-height: 600px;
      {% if section.settings.image_bg_mobile != blank %}
        background-image: url('{{ section.settings.image_bg_mobile | image_url: width: 800 }}');
      {% endif %}
    }
    #LT--{{ section.id }} .luna-templates__hero-marquee-content {
      padding: 25px 0 ;
    }
    #LT--{{ section.id }} .luna-templates__hero-marquee-text-container {
      padding: 20px;
      {% if section.settings.layout == '2' %}
        padding-bottom: 0; 
        padding-top: 0; 
      {% endif %}
    }
    #LT--{{ section.id }} .luna-templates__marquee-item * {
      font-size: {{ section.settings.font_size_mobile }}px;
      padding-right: 20px;
    }

    /* Button Block Style */
    #LT--{{ section.id }} .luna-templates__block .luna-templates__button {
      font-size: var(--font-size-749);
    }
  }

  /* Custom CSS */
  {{ section.settings.custom_css }}

{%- endstyle -%}

