<section id="LT--{{ section.id }}" class="LT__section luna-templates__hero-marquee luna-templates__hero-marquee-layout-{{ section.settings.layout }} {{ section.settings.css_class }}" >

  <style>
    /* Apply desktop height */
    @media (min-width: 750px) {
      #LT--{{ section.id }} {
        height: {{ section.settings.desktop_height }}px;
        max-height: {{ section.settings.desktop_height }}px;
      }
    }

    /* Apply mobile height */
    @media (max-width: 749px) {
      #LT--{{ section.id }} {
        height: {{ section.settings.mobile_height }}px;
        max-height: {{ section.settings.mobile_height }}px;
      }
    }
  </style>

  {% if section.settings.background_type == 'video' and section.settings.video_bg != blank %}
    <div class="video-background">
      <video autoplay loop muted playsinline poster="{{ section.settings.video_bg.preview_image | img_url: 'master' }}">
        {% for source in section.settings.video_bg.sources %}
          <source src="{{ source.url }}" type="{{ source.mime_type }}">
        {% endfor %}
        Your browser does not support the video tag.
      </video>
    </div>
  {% elsif section.settings.background_type == 'image' and section.settings.image_bg != blank %}
    <div class="image-background" style="background-image: url('{{ section.settings.image_bg | img_url: 'master' }}');"></div>
  {% endif %}

  <div class="luna-templates__hero-marquee-content">
    {{ marquee }}
    <div class="luna-templates__hero-marquee-text-container">
      {%- for block in section.blocks -%}
        <div id="LT--{{ block.id }}" class="luna-templates__block luna-templates__block--{{ block.type }}" {{ block.shopify_attributes }}>
          {%- case block.type -%}
            {%- when 'text' -%}
              {%- if block.settings.text != blank -%}
                <div class="luna-templates__text" style="
                  --font-size: {{ block.settings.font_size_mobile }}px;
                  --font-size-750: {{ block.settings.font_size_desktop | divided_by: 1.2 }}px;
                  --font-size-1200: {{ block.settings.font_size_desktop }}px;
                  ">{{ block.settings.text }}</div>
              {%- endif -%}
            {%- when 'button' -%}
              {%- if block.settings.link_text != blank -%}
                <div class="luna-templates__button-container" style="
                  --button-margin: {%- if block.settings.btn_shape == "oval" -%}30px 0{% else %}20px 0{%- endif -%};
                  --bg-color: {{ block.settings.color_btn_fill }};
                  --bg-hover: {{ block.settings.color_btn_fill_hover }};
                  --border-color: {{ block.settings.color_btn_border }};
                  --border-hover: {{ block.settings.color_btn_border_hover }};
                  --font-size: {{ block.settings.font_size_btn_desktop }}px;
                  --font-size-749: {{ block.settings.font_size_btn_mobile }}px;
                  --text-color: {{ block.settings.color_btn_text }};
                  --text-hover: {{ block.settings.color_btn_text_hover }};
                  ">
                  <a class="luna-templates__button LT__btn-{{ block.settings.btn_shape }}" href="{{ block.settings.link_url }}">{{ block.settings.link_text }}</a>
                </div>
              {%- endif -%}
            {%- when 'html' -%}
              {{ block.settings.html }}
          {%- endcase -%}
        </div>
      {%- endfor -%}
    </div>
  </div>
</section>



  
